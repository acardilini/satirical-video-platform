{
  "name": "satirical-video-platform",
  "version": "1.0.0",
  "description": "A platform for assisting the creation of satirical videos about human use and treatment of animals.",
  "main": "dist/main/main.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "build": "tsc -p tsconfig.main.json && tsc -p tsconfig.renderer.json && if not exist dist\\renderer\\styles mkdir dist\\renderer\\styles && copy src\\renderer\\index.html dist\\renderer\\index.html && copy src\\renderer\\styles\\components.css dist\\renderer\\styles\\components.css",
    "start": "npm run build && electron .",
    "dev": "tsc -w & electron . --dev",
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rimraf dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/acardilini/satirical-video-platform.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/acardilini/satirical-video-platform/issues"
  },
  "homepage": "https://github.com/acardilini/satirical-video-platform#readme",
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.2.1",
    "@types/uuid": "^10.0.0",
    "electron": "^37.2.6",
    "electron-rebuild": "^3.2.9",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "bcrypt": "^6.0.0",
    "better-sqlite3": "^12.2.0",
    "dotenv": "^17.2.1",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^11.1.0"
  }
}
